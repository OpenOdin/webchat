<webchat-message>
    <p class="text-black leading-normal">
        <raw htmlWithLinks={ props.item.data.editedText ?? props.item.data.text ?? "" }/>
    </p>

    <span if={props.item.data.isAuthor}>
        <a href="#" onclick={ () => {
            let editedText = window.prompt("Edit message", props.item.data.editedText ?? props.item.data.text);
            if (!editedText) {return;} props.controller.editMessage(props.item.node, editedText);
        }}>âœŽ</a>

        <a href="#" onclick={ () => props.controller.deleteMessage(props.item.node) }>ðŸ—‘</a>
    </span>

    <webchat-reactions controller={props.controller} item={props.item}></webchat-reactions>
</webchat-message>
